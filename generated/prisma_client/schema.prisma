generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma_client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  email        String        @unique
  password     String
  reservations Reservation[]
}

model Parking_spot {
  id           Int           @id @default(autoincrement())
  name         String
  location     String
  reservations Reservation[]
}

model Reservation {
  id                  Int               @id @default(autoincrement())
  user_id             Int               @unique
  parking_spot_number Int               @unique
  reserved_date       DateTime
  reserved_time       DateTime
  status              ReservationStatus @default(BOOKED)
  authorId            User              @relation(fields: [user_id], references: [id])
  parkingSpotId       Parking_spot      @relation(fields: [parking_spot_number], references: [id])
}

enum ReservationStatus {
  BOOKED
  CANCELLED
}
